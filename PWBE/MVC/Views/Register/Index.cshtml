@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login-style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    <title>Register</title>
</head>
<body>

    <div class="container">
        <div class="left">
            <div class="sk8-center">
                <h1>SK8TOONY</h1>
                <h2>"Seu estilo é o nosso compromisso."</h2>
            </div>
        </div>

        <div class="right">
            <h1>REGISTER</h1>

            <div class="login">
                <form asp-controller="Register" asp-action="Index" method="post">
                    <input type="text" name="firstName" id="firstName" placeholder="First Name" required>
                    <input type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                    <input type="text" name="username" id="username" placeholder="Username" required>

                    <label for="gender">Gender</label>
                    <select name="gender" id="gender">
                        <option value="select">Select</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Others</option>
                    </select>

                    <label for="date">Date of birth</label>
                    <input type="date" name="date" id="date" required>

                    <label for="cpf">CPF</label>
                    <input type="text" name="cpf" id="cpf" pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}" placeholder="999.999.999-99" required />
                    <script type="text/javascript">$("#cpf").mask("000.000.000-00");</script>

                    <label for="phone">Phone</label>
                    <input type="tel" name="phone" id="phone" pattern="\([0-9]{2}\)[\s][0-9]{4}-[0-9]{4,5}" placeholder="(99) 9999-99999" required />
                    <script type="text/javascript">$("#phone").mask("(00) 0000-00009");</script>

                    <input type="email" name="email" id="email" placeholder="Email" required>
                    <input type="password" name="password" id="password" placeholder="Password" required>
                    <input type="password" name="confpassword" id="confpassword" placeholder="Confirm Password" required>

                    <input type="submit" value="Register" id="btn-register" class="btn">
                </form>
            </div>
        </div>
    </div>
</body>
</html>